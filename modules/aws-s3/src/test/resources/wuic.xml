<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE wuic SYSTEM 'http://capgemini.com/wuic/wuic.dtd'>
<wuic>
	<resource-factory-builders>
        <resource-factory-builder id="s3FactoryBuilder" class="com.github.wuic.s3.S3WuicResourceFactoryBuilder" regex="true">
            <properties>
                <!--    Key : c.g.wuic.s3Bucket
                        The bucket name, you can create a new bucket in your console :
                        https://console.aws.amazon.com/s3/ -->
                <property key="c.g.wuic.s3Bucket">bucket-wuic-test</property>
                <!--    Key : c.g.wuic.s3Key
                        The AWS auth access key, you can generate a new auth access key in your account :
                        https://portal.aws.amazon.com/gp/aws/securityCredentials -->
                <property key="c.g.wuic.s3Key">AKIAIJEHPHWRIGAQJ4ZQ</property>
                <!--    Key : c.g.wuic.s3Secret
                        The AWS secret auth access key, you can generate a new secret auth access key in your account :
                        https://portal.aws.amazon.com/gp/aws/securityCredentials -->
                <property key="c.g.wuic.s3Secret">LLGpZhcsJQXdSuyCpM8uCb8oJiWSPc7/Xf7oAjs/</property>
                <!--    Key : c.g.wuic.s3Path
                        The s3 path for search resources without bucket name, example :
                        empty : search in root and sub directories
                        wuic : search in "wuic/*"
                        wuic/test : search in "wuic/test/*" -->
                <property key="c.g.wuic.s3Path">wuic/test</property>
            </properties>
        </resource-factory-builder>
	</resource-factory-builders>
	<groups>
		<group id="css-image" configuration="yuicompressor-css" default-builder="s3FactoryBuilder">
            <file>.*.css</file>
		</group>
	</groups>
	<configurations>
        <configuration id="yuicompressor-css" type="CSS">
            <aggregate>true</aggregate>
            <charset>UTF-8</charset>
            <compress>true</compress>
            <yuiLineBreakPos>-1</yuiLineBreakPos>
        </configuration>
	</configurations>
</wuic>