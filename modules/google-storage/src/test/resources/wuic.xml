<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE wuic SYSTEM 'http://capgemini.com/wuic/wuic.dtd'>
<wuic>
	<resource-factory-builders>
        <resource-factory-builder id="gStorageFactoryBuilder" class="com.github.wuic.gstorage.GStorageWuicResourceFactoryBuilder" regex="true">
            <properties>
                <!--    Key : c.g.wuic.gStorageBucket
                        You can set in your Google Cloud Console
                        https://cloud.google.com/console -->
                <property key="c.g.wuic.gStorageBucket">bucket-wuic-test</property>
                <!--    Key : c.g.wuic.gStorageClientId
                        The Google Cloud API client id, you can generate a new client ID on this page :
                        https://code.google.com/apis/console/
                        - Go on : API Access > "Create another client ID..."
                        - Installed application type : select "Service account"
                        - Copy here the "Email address" field, "xxxxx-yyyyy@developer.gserviceaccount.com -->
                <property key="c.g.wuic.gStorageClientId">xxxxx-yyyyy@developer.gserviceaccount.com</property>
                <!--    Key : c.g.wuic.gPath
                        The Google Storage path for search resources without bucket name, example :
                        empty : search in root and sub directories
                        wuic : search in "wuic/*"
                        wuic/test : search in "wuic/test/*" -->
                <property key="c.g.wuic.gStoragePath"></property>
                <!--    Key : c.g.wuic.gPrivateKeyPath
                        You can generate a new key file on this page :
                        https://code.google.com/apis/console/
                        - Go on : API Access > "Create another client ID..."
                        - Installed application type : select "Service account"
                        - Download key file or Generate new key
                 -->
                <property key="c.g.wuic.gPrivateKeyPath">privatekey.p12</property>
            </properties>
        </resource-factory-builder>
	</resource-factory-builders>
	<groups>
		<group id="css-image" configuration="yuicompressor-css" default-builder="gStorageFactoryBuilder">
            <file>.*.css</file>
		</group>
	</groups>
	<configurations>
        <configuration id="yuicompressor-css" type="CSS">
            <aggregate>true</aggregate>
            <charset>UTF-8</charset>
            <compress>true</compress>
            <yuiLineBreakPos>-1</yuiLineBreakPos>
        </configuration>
	</configurations>
</wuic>